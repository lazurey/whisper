.pic-share__head--simple {
  padding: $padding-small;
}

.pic-share__avatar,
.pic-share__info {
  display: inline-block;
  vertical-align: middle;
}

.pic-share__info {
  h3 {
    margin-bottom: 10px;
  }
}

.pic-share__follow {
  float: right;
  padding-top: 25px;
}

.pic-share__avatar {
  margin-right: $padding-small;
  img {
    border-radius: 100%;
    width: 80px;
    height: 80px;
  }
}

.pic-share__pic {
  img {
    width: 100%;
  }
}

.pic-share__share {
  padding: $padding-small;
}

.pic-share__times, .pic-share__kizz {
  > span {
    display: inline-block;
    vertical-align: middle;
  }
}

.pic-share__count {
  border-radius: 100%;
  background: $color-info;
  color: $color-white;
  width: 40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.pic-share__kizz {
  .kizz-text {
    margin-left: 15px;
  }
}

.share-user__list {
  li {
    padding: 0 5px;
    display: inline-block;
  }
  img {
    width: 40px;
    height: 40px;
    border-radius: 100%;
  }
}

.pic-share__comment {
  padding: 0 $padding-small;
}

.pic-share__comment-item {
  .comment__user {

  }
  .comment__content {
    color: $color-muted;
  }
}

.hot-pic__title {
  padding-left: $padding-small;
  h2 {
    border-left: 3px solid $color-info;
    padding-left: 5px;
    font-size: 1.2rem;
    font-weight: bold;
  }
}