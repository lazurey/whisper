.personal-page__header {
  padding: $padding-small;
}

.personal-page__header-data {
  label {
    color: $color-light;
  }
  > * {
    display: block;
    font-size: 1.2rem;
    font-size: 19.2px;
  }
}

.personal-page__header-avatar {
  img {
    border-radius: 100%;
    overflow: hidden;
    border: 1px solid $color-primary;
    width: 80px;
    height: 80px;
  }
}

.personal-page__tab-tab {
  width: 100%;
  height: 60px;
  line-height: 60px;
  border-top: 1px solid $color-light;
  border-bottom: 1px solid $color-light;
}

.image-list__image {
  max-width: 100%;
}

.image-list__link {
  overflow: hidden;
  display: inline-block;
  margin: 5px;
}