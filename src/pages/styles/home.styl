.personal-page__header {
  padding: $padding-small;
}

.personal-page__header-data {
  label {
    color: $color-light;
  }
  > * {
    display: block;
    font-size: 19.2px; /* fallback for IE8 */
    font-size: 1.2rem;
    text-align: center;
  }
}

.person-page__follow {
  text-align: right;
  padding-top: 6px;
}

@media screen and (max-width: $screen-mid) {
  .personal-page__header-data {
    > * {
      font-size: 10px; /* fallback for IE8 */
      font-size: 0.625rem;
    }
  }  
  .personal-page__header-detail {
    font-size: 9.5px;
  }
}

.personal-page__header-avatar {
  img {
    border-radius: 100%;
    overflow: hidden;
    width: 80px;
    height: 80px;
  }
  @media screen and (max-width: $screen-mid) {
    img {
      width: 50px;
      height: 50px;
    }
  }
}

.personal-page__header-detail {
  padding-left: 10px;
  margin-top: $padding-small * 0.5;
}

.personal-page__tab-tab {
  width: 100%;
  height: 60px;
  line-height: 60px;
  border-top: 1px solid $bg-grey;
  border-bottom: 1px solid $bg-grey;
  > li {
    display: inline-block;
    width: 49.5%;
    text-align: center;
    &:first-child {
      border-right: 1px solid $bg-grey;
    }
  }
}