.timeline {
  > .container {
    background: url('../images/timeline-bg.png') no-repeat top center #bcb196;
    background-size: 100%;
    overflow: hidden;
  }
  .timeline-user {
    text-align: center;
    padding: 40px 0;
    img {
      width: 55px;
      height: 55px;
      border-radius: 50%;
      border: 2px solid $color-white;
    }
    h1 {
      font-size: 12px;
      color: $color-white;
    }

  }
}

.timeline-list {
  width: 100%;
  margin: 0;
  padding: 0;
  height: 300px;
  position: relative;
}

.timeline-item {
  background: $color-white;
  border-radius: 5px;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.6);
  width: 190px;
  display: none;
  min-height: 250px;
  
  .timeline-date {
    position: absolute;
    top: 390px;
    width: 190px;
    text-align: center;
    color: $color-white;
  }
  
  .timeline-item__pic {
    img {
      width: 100%;
      max-width: 100%;
      border-radius: 5px 5px 0 0;
    }
  }
  
  &.timeline-item--left {
    display: block;
    position: absolute;
    top: 30px;
    left: -120px;
    opacity: 0.7;
    .timeline-date {
      text-align: right;
    }
  }
    
  &.timeline-item--right {
    display: block;
    position: absolute;
    top: 30px;
    right: -120px;
    opacity: 0.7;
    .timeline-date {
      text-align: left;
    }
  }

  &.timeline-item--current {
    display: block;
    margin: 0 auto;
    opacity: 1;
    .timeline-date {
      text-align: center;
      top: 420px;
    }
  }
}

.timeline-line {
  padding: 80px 0;
  img {
    max-width: 100%;
  }
}