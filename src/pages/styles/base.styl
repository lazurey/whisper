body {
  font-size: 19.2px; /* fallback for IE8 */
  font-size: 1.2rem;
  min-width: 320px;
}

@media screen and (max-width: $screen-max) {
  body {
    font-size: 16px;
    font-size: 1rem;
  }
}

@media screen and (max-width: $screen-mid) {
  body {
    font-size: 12.8px;
    font-size: 0.8rem;
  }
  
  .btn {
    padding: 0 $padding-small * 0.6;
  }
}

* {
  letter-spacing: 0;
}

a {
  text-decoration: none;
}

button {
  border: none;
  box-shadow: none;
}

ul, ul li {
  margin: 0;
  padding: 0;
  list-style: none;
}

p {
  margin: 0 0 10px 0;
}


.container {
  min-width: 280px;
  max-width: 640px;
  margin: 0 auto;
}

.main {
  margin-bottom: 150px;
}

.btn {
  border-radius: 5px;
  height: 30px;
  line-height: 30px;
  display: inline-block;
  padding: 0 $padding-small;
}
  
.btn-primary {
  background-color: $color-primary;
  color: $color-white;
}

.btn-wide {
  display: block;
  width: 100%;
  text-align: center;
}


@media screen and (max-width: $screen-mid) {
  .btn {
    padding: 0 $padding-small * 0.8;
  }
}