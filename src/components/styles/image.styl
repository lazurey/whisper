.image-list__image {
  max-width: 98%;
}

.image-list__link {
  overflow: hidden;
  display: inline-block;
  width: 100%;
}

img.image {
  background: url('../images/loading.gif') no-repeat center center;
}

.hot-pic {
  margin-bottom: 100px;
}

.btn-loading {
  opacity: 0;
  padding: 10px 5px;
  position: fixed;
  bottom: 80px;
  width: 96%;
  transition:  opacity 0.8s ease-in;
  .btn {
    background-color: $color-primary;
    color: $color-text;
    width: 100%;
    display: inline-block;
  }
  &.btn-loading__show {
    opacity: 0.9;
    transition: opacity 0.1s ease-out;
  }
}

.image--gif {
  position: relative;
  &:before {
    content: ' ';
    background: url('../images/gif_icon.png') no-repeat top right;
    position: absolute;
    height: 80px;
    width: 80px;
    background-size: 80px 80px;
    top: 0;
    right: 2%;
  }
}

@media screen and (max-width: $screen-max) {
  .image--gif {
    &:before {
      height: 40px;
      width: 40px;
      background-size: 40px 40px;
    }
  }
}
