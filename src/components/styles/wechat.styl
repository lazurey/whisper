.wechat-layer {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background: rgba(0, 0, 0, 0.8);
  text-align: center;
  color: $color-white;
  
  .arrow {
    text-align: right;
    margin: 10px 30px 30px 0;
    img {
      width: 120px;
    }
  }
  
  p {
    font-size: 19.8px;
    font-size: 1.2rem;
    line-height: 1.8rem;
    padding: 0 20px;
  }
  
  &.wechat-layer--hidden {
    display: none !important;
  }
  
  .btn-wide.close {
    width: 80%;
    margin: 30px auto 0 auto;
  }
}